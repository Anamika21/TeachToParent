<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amagupta.teachtoparent.ParentFeedback">
    <!--android:id="@+id/"> -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSubject"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Base.Widget.AppCompat.Light.AutoCompleteTextView"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:editable="true"
        android:inputType="text|textAutoCorrect"
        android:theme="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_marginTop="100dp"
        android:hint="Subject" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSuccess" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button_cancel"
        android:layout_alignTop="@+id/button_submit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onCancel" />

    <EditText
        android:background="@layout/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textSubject"
        android:layout_alignEnd="@+id/textSubject"
        android:editable="true"
        android:focusable="true"
        android:outlineProvider="bounds" />

</RelativeLayout>
