<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amagupta.teachtoparent" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teachparconnect"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParentHome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_parent_home"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ParentFeedback"
            android:label="@string/title_activity_parent_feedback" >
        </activity>
        <activity
            android:name=".ParentNotification"
            android:label="@string/title_activity_parent_notification" >
        </activity>
        <activity
            android:name=".ParentAppointment"
            android:label="@string/title_activity_parent_appointment" >
        </activity>
        <activity
            android:name=".ParentSchedule"
            android:label="@string/title_activity_parent_schedule" >
        </activity>
        <activity
            android:name=".ParentResult"
            android:label="@string/title_activity_parent_result" >
        </activity>
        <activity
            android:name=".DisplayData"
            android:label="@string/title_activity_display_data" >
        </activity>
    </application>

</manifest>
